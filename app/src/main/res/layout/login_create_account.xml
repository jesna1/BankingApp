<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_screen"
        tools:context=".screens.login_create_account.LoginCreateAccount">



        <ImageView
            android:layout_width="51dp"
            android:layout_height="67dp"
            android:src="@drawable/ic_logo_app"
            android:layout_gravity="center"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_bottom_sheet_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_1"
                    android:inputType="text"
                    android:text="Create account"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <androidx.legacy.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_2"
                    android:inputType="text"
                    android:text="Log In"
                    android:textColor="@color/green"
                    android:textSize="18sp" />


            </LinearLayout>


        </FrameLayout>


    </FrameLayout>

</layout>